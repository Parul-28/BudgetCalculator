<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.parul.budgetcalculator.money_used"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <!--<Button-->
        <!--android:layout_width="@dimen/btnw"-->
        <!--android:layout_height="@dimen/btnh"-->
        <!--android:text="Balance"-->
        <!--android:id="@+id/balance"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:textSize="@dimen/txtsize"-->
        <!--android:textColor="@color/txt"-->
        <!--android:layout_gravity="center"-->
        <!--android:onClick="balance"-->
        <!--android:layout_marginLeft="50dp"-->
        <!--android:background="@drawable/mbutton"/>-->
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Total Budget"
            android:id="@+id/total"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:textStyle="italic"
            android:onClick="total" />
        <TextView
            android:id="@+id/balance_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:onClick="balance" />
    </LinearLayout>
    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        android:id="@+id/add"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:onClick="add"
        android:background="@color/colorAccent" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Expense"
        android:id="@+id/show"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:onClick="show"
        android:background="@color/colorAccent" />
</LinearLayout>
